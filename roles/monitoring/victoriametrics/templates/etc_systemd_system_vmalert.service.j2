[Unit]
Description=VictoriaMetrics VMalert service
After=network.target

[Service]
Type=simple
User=prometheus
Group=prometheus
ExecStart=/usr/bin/vmalert -datasource.url=http://127.0.0.1:8428 -datasource.basicAuth.username=vmagent -datasource.basicAuth.password={{ victoriametrics_exporters_auth_password }} -notifier.url=http://127.0.0.1:9093 -rule=/etc/victoriametrics/vmalert/rules/*.yml -httpListenAddr=127.0.0.1:8880 -evaluationInterval=30s -remoteWrite.url=http://127.0.0.1:8428 -remoteWrite.basicAuth.username=vmagent -remoteWrite.basicAuth.password={{ victoriametrics_exporters_auth_password }}
ExecReload=/bin/kill -HUP $MAINPID

PrivateTmp=yes
ProtectHome=yes
NoNewPrivileges=yes
ProtectSystem=full
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes

[Install]
WantedBy=multi-user.target
