# rsyslog configuration for APT package manager related logs

input(type="imfile"
      File="/var/log/apt/history.log"
      readMode="0"
      Tag="apt:"
      Facility="local0"
      PersistStateInterval="0")

input(type="imfile"
      File="/var/log/apt/term.log"
      readMode="2"
      Tag="apt:"
      Facility="local0"
      PersistStateInterval="0")

